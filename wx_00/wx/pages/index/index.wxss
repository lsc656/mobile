page{
  width:100%;
  height:100%;
  background-color:#FAFAFA; 
}
.index{
  height:100%;
}
.first-page{
  overflow:hidden;
  background: url("http://127.0.0.1:3000/img/index/background.jpg") no-repeat;
  background-size:100% 100%;
  width:100%;
  box-sizing: border-box;
  padding-top:30%;
  color:#62787A;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content:flex-start;
  position:absolute;
}
.first-page .logo{
  display:flex;
  font-size:37px;
  align-items: center;
}
.first-page>view:nth-child(2){
  margin:40rpx 0;
}
.logo-parent{
  position:relative;
  width:100rpx;
  height:45rpx;
}
.logo-item{
  position:absolute;
  top:0;
  left:0;
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  border-bottom-left-radius: 0;
  border-top-right-radius: 0;
  transform-origin: 0% 100%;
  background: #B5C4C1;
}
.logo-item:last-child{
  background: #efe;
}
.logo-item:first-child{
  transform: rotate(-45deg);
}
.logo-item:nth-child(2){
  transform: rotate(45deg);
}
.first-page>view:nth-child(3){
  width:100%;
  display: flex;
  justify-content: center;
}
.first-page input{
  display: inline-block;
  line-height:80rpx;
  height:80rpx;
  width:80%;
  background-color: #fff;
}
.first-page button{
  border:none;
  border-radius:0;
  padding:0;
  margin:0;
  display: inline-block;
  width:80rpx;
  height:80rpx;
  background-image: url("http://127.0.0.1:3000/img/index/icon-search.jpg");
  background-repeat:no-repeat;
  background-size:100% 100%;
  position:static;
}
.slide-up{
  text-align:center;
  position:absolute;
  bottom:25%;
}
.slide-up::before{
  content:"";
  display:block;
  width:40rpx;
  height:40rpx;
  border-top:1px solid #62787A;
  border-right:1px solid #62787A;
  transform: rotate(-45deg);
  position:absolute;
  left:47%;
  bottom:100%;
}
.second-page{
  width:100%;
  height:100%;
  display:none;
  overflow: hidden;
  position:absolute;
}
.sp-c{
  padding:0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#999;
  font-size:12px;
}
.sp-c>text{
  padding:10rpx 0;
}
.sp-c>view{
  background-color:#fff; 
  padding:10rpx;
  display:flex;
  width:100%;
  justify-content: space-between;
  align-items: center;
}
.sp-fl1{
  display: flex;
  flex-wrap: wrap;
}
.sp-fl1>.sp-fl1-item{
  box-sizing: border-box;
  background-size:cover;
  background-repeat:no-repeat;  
  margin:2rpx 0;
  width:33%;
  height:110rpx;
  color:#fff;
  font-size:32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sp-fl2{
  display:flex;
  justify-content: space-between;
  width:100%;
}
.sp-fl2>view>image{
  width:100%;
}
.sp-fl2>.sp-fl2-big,.sp-fl2>.sp-fl2-small{
  position:relative;
}
.sp-fl2>.sp-fl2-big{
  width:480rpx;
  height:480rpx;
}
.sp-fl2>.sp-fl2-big>image{
  height:100%;
}
.sp-fl2>.sp-fl2-big>view{
  padding:10rpx;
  position:absolute;
  bottom:0;
  left:0;
  display:flex;
}
.sp-fl2>.sp-fl2-big>view>image{
  top:0;
  width:57rpx;
  height:75rpx;
}
.sp-fl2>.sp-fl2-big>view>view{
  margin-left:10rpx;
  margin-top:-10rpx;
  color:#fff;
}
.sp-fl2>.sp-fl2-big>view>view>view{
  font-size:40rpx;
  font-weight:bold;
}
.sp-fl2>.sp-fl2-big>view>view>text{
  margin-right:10rpx;
}
.sp-fl2>.sp-fl2-small{
  width:240rpx;
  height:480rpx;
  background-image:linear-gradient(to top,#F5F5F5 0%,#F5F5F5 49%,#fff 50%,#fff); 
}
.sp-fl2>.sp-fl2-small>image{
  height:50%;
}
.sp-fl2>.sp-fl2-small>view>image{
  width:75rpx;
  height:57rpx;
  position:absolute;
  bottom:10rpx;
  left:5rpx;
}
.sp-fl2>.sp-fl2-small>view>view{
  color:#999;
}
.sp-fl2>.sp-fl2-small>view>view>view{
  font-size:44rpx;
}
.sp-fl2>.sp-fl2-small>view>view>text{
  margin-right:10rpx;
}
.sp-fl2>.sp-fl2-small::after{
  content:"";
  width:20rpx;
  height:20rpx;
  background: #F5F5F5;
  transform: rotate(45deg);
  position:absolute;
  top:48%;
  left:48%;
}