page{
  width:100%;
  height:100%;
  background-color:#FAFAFA; 
}
.index{
  height:100%;
}
.first-page{
  overflow:hidden;
  background-size:100% 100%;
  background: url("http://127.0.0.1:3000/img/index/background.jpg") no-repeat;
  width:100%;
  box-sizing: border-box;
  padding-top:30%;
  color:#62787A;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content:flex-start;
  position:absolute;
}
.first-page .logo{
  display:flex;
  font-size:37px;
  align-items: center;
}
.first-page>view:nth-child(2){
  margin:40rpx 0;
}
.logo-parent{
  position:relative;
  width:100rpx;
  height:45rpx;
}
.logo-item{
  position:absolute;
  top:0;
  left:0;
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  border-bottom-left-radius: 0;
  border-top-right-radius: 0;
  transform-origin: 0% 100%;
  background: #B5C4C1;
}
.logo-item:last-child{
  background: #efe;
}
.logo-item:first-child{
  transform: rotate(-45deg);
}
.logo-item:nth-child(2){
  transform: rotate(45deg);
}
input{
  background: #fff;
  line-height:80rpx;
  height:80rpx;
  width:80%;
  background-image: url("http://127.0.0.1:3000/img/index/icon-search.jpg");
  background-repeat:no-repeat;
  background-size:80rpx 80rpx;
  background-position:95% 0; 
}
.slide-up{
  text-align:center;
  position:absolute;
  bottom:25%;
}
.slide-up::before{
  content:"";
  display:block;
  width:40rpx;
  height:40rpx;
  border-top:1px solid #62787A;
  border-right:1px solid #62787A;
  transform: rotate(-45deg);
  position:absolute;
  left:47%;
  bottom:100%;
}
.second-page{
  width:100%;
  height:100%;
  display:none;
  overflow: hidden;
  position:absolute;
}
.sp-c{
  padding:0 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#999;
  font-size:12px;
}
.sp-c>text{
  padding:10rpx 0;
}
.sp-c>view{
  background-color:#fff; 
  padding:10rpx;
  display:flex;
  width:100%;
  justify-content: space-between;
  align-items: center;
}
.sp-fl1>.sp-fl1-item{
  box-sizing: border-box;
  width:33.3333%;
  height:110rpx;
  color:#000;
  font-size:16px;
  display: flex;
  justify-content: center;
  align-items: center;
}