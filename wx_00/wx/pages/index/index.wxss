page{
  width:100%;
  height:100%;
  background: url("http://127.0.0.1:3000/img/index/background.jpg") no-repeat;
  background-size: cover;
}
.index{
  height:600rpx;
  color:#62787A;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.index .logo{
  display:flex;
  font-size:37px;
  align-items: center;
}
.index>view:nth-child(2){
  margin:40rpx 0;
}
.logo-parent{
  position:relative;
  width:100rpx;
  height:45rpx;
}
.logo-item{
  position:absolute;
  top:0;
  left:0;
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  border-bottom-left-radius: 0;
  border-top-right-radius: 0;
  transform-origin: 0% 100%;
  background: #B5C4C1;
}
.logo-item:last-child{
  background: #efe;
}
.logo-item:first-child{
  transform: rotate(-45deg);
}
.logo-item:nth-child(2){
  transform: rotate(45deg);
}
input{
  background: #fff;
  line-height:80rpx;
  height:80rpx;
  width:80%;
}