/* pages/hlogic/hlogic.wxss */
.authorInfo{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:0 20rpx;
}
.authorInfo>view:first-child{
  display: flex;
  align-items: center;
  padding:10rpx;
}
.authorInfo>view:first-child>image{
  width:94rpx;
  height:94rpx;
  border-radius: 50%;
}
.authorInfo>view:first-child>view:nth-child(2){
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0 20rpx;
}
.authorInfo>view:first-child>view:nth-child(2)>view:first-child{
  font-size:36rpx;
  color:#444;
}
.authorInfo>view:first-child>view:nth-child(2)>view:nth-child(2){
  font-size:24rpx;
  color:#999;
}
.authorInfo>button{
  padding:0;
  margin:0;
  height:50rpx;
  width:100rpx;
  background-color:#DC3A3F;
  border:1rpx solid #C90000;
  color:#FFF; 
  line-height:150%;
  font-size:12px;
}
.banner{
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top:1rpx solid #ededed;
  border-bottom:1rpx solid #ededed;
}
.banner>view{
  text-align:center;
  flex-grow: 1;
  padding:20rpx;
}
.banner>view:not(:last-child){
  border-right:1rpx solid #ededed;
}
.banner>view.active{
  background-color:#ededed; 
}
.content .myBoardList.moreInfo{
  column-count: 2;
  column-gap:20rpx;
}
.content .myBoardList>.card{
  width:100%
}
.content .myBoardList>.card>.works>image{
  width:100%;
}
