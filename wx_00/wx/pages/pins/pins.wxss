/* pages/pins/pins.wxss */
.main button{
  height:70%;
  line-height: 200%;
}
.header{
  padding:10rpx;
  display:flex;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
}
.header>view:first-child{
  display: flex;
}
.header>view:first-child>image{
  height:100rpx;
  width:100rpx;
}
.header>view:first-child>view{
  margin:0 10rpx 0 20rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.header>view:first-child>view:nth-child(2)>view:nth-child(2){
  color:#999999;
  font-size:24rpx;
}
.header>view:nth-child(2){
  display: flex;
  flex-direction: row;
}
.header>view>button{  

  margin-right:10rpx;
}
.likes.uactive{
  display: none;
}
.likes{
  display: flex;
  justify-content: flex-end;
  background: #ededed;
  padding:20rpx 10rpx;
  position:relative;
}
.likes::before{
  content:'';
  display: block;
  height:30rpx;
  width:30rpx;
  position:absolute;
  top:-18rpx;
  right:40rpx;
  transform: rotate(-45deg);
  background: #ededed;
}
.likes>button{
  margin:0 10rpx;
}
.banner{
  display: flex;
  justify-content: space-around;
  border-top:1px solid #DDD;
  border-bottom:1px solid #DDD;
}
.banner>view{
  padding:20rpx 0;
  width:50%;
  text-align: center;
  color:#777;
  font-size:34rpx;
}
.banner>view:first-child{
  border-right:1px solid #DDD;
}
.banner>view.active{
  background: #EDEDED;
  font-weight: bold;
  color:#444;
}
.content{
  padding:20rpx 10rpx;
}
.content>view{
  display:none;
}
.content>view.active{
  display: block;
}
.content>view.active>view.list{
  column-count:2;
  column-gap:20rpx;
}