/* pages/pins/pins.wxss */
.main button{
  height:70%;
  line-height: 200%;
}
.header{
  padding:10rpx;
  display:flex;
  height:100rpx;
  align-items: center;
  justify-content: space-between;
}
.header>view:first-child{
  display: flex;
}
.header>view:first-child>image{
  height:100rpx;
  width:100rpx;
}
.header>view:first-child>view{
  margin:0 10rpx 0 20rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.header>view:first-child>view:nth-child(2)>view:nth-child(2){
  color:#999999;
  font-size:24rpx;
}
.header>view:nth-child(2){
  display: flex;
  flex-direction: row;
}
.header>view>button{  

  margin-right:10rpx;
}
.likes.uactive{
  display: none;
}
.likes{
  display: flex;
  justify-content: flex-end;
  background: #ededed;
  padding:20rpx 10rpx;
  position:relative;
}
.likes::before{
  content:'';
  display: block;
  height:30rpx;
  width:30rpx;
  position:absolute;
  top:-18rpx;
  right:40rpx;
  transform: rotate(-45deg);
  background: #ededed;
}
.likes>button{
  margin:0 10rpx;
  font-size:30rpx;
}
.likes>button>image{
  width:20rpx;
  height:20rpx;
}
.banner{
  display: flex;
  justify-content: space-around;
  border-top:1px solid #DDD;
  border-bottom:1px solid #DDD;
}
.banner>view{
  padding:20rpx 0;
  width:50%;
  text-align: center;
  color:#777;
  font-size:34rpx;
}
.banner>view:first-child{
  border-right:1px solid #DDD;
}
.banner>view.active{
  background: #EDEDED;
  font-weight: bold;
  color:#444;
}
.content{
  padding:20rpx 10rpx;
  background-color:#f5f5f5; 
}
.content>view{
  display:none;
}
.content>view.active{
  display: block;
}
.content>view.active>view.list.moreData{
  width:100%;
  column-count:2;
  column-gap:20rpx;
}
.content .list .card{
  background-color:#fff;
  margin-bottom:20rpx;
  box-shadow:1px 1px 3px 3px #ededed;
  -webkit-column-break-inside:avoid;
}
.content .list .card .md-image{
  width:100%;
}
.content .list .card>view:nth-child(2){
  padding:0 10rpx;
  font-size:26rpx;
  color:#777;
}
.content .list .card>view:nth-child(3){
  padding:0 10rpx;
  font-size:26rpx;
}
.content .list .card>view:nth-child(3)>image{
  height:20rpx;
  width:20rpx;
}
.content .list .card>.author-info{
  padding:5rpx 10rpx;
  border-top:1rpx solid #F2F2F2;
  display: flex;
  justify-content: space-between;
}
.content .list .card>.author-info>view>image{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
}
.content .list .card>.author-info>view:first-child{
  width:20%;
  display:flex;
  justify-content: center;
  align-items: center;
}
.content .list .card>.author-info>view:last-child{
  width:80%;
}
.content .list .card>.author-info>view:last-child>view{
  font-size:24rpx;
  color:#777;
}
.content>view:nth-child(2).col{
  column-count: 2;
  column-gap: 20rpx;
}
.content>view:nth-child(2)>.card{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  background-color:#fff;
  border:1rpx solid #d9d9d9;
  box-shadow:2rpx 2rpx 4rpx 3rpx #d9d9d9;
  align-items: center;
  padding:20rpx 0;
}
.content>view:nth-child(2)>.card>view:first-child{
  display:flex;
  justify-content: center;
  align-items: center;
  padding:10rpx;
  border-radius: 50%;
  border:2rpx solid #cfcfcf;
}
.content>view:nth-child(2)>.card>view:first-child>image{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
}
.content>view:nth-child(2)>.card>view:nth-child(2){
  font-size:38rpx;
  color:#444;
}