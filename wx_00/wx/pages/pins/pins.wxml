<!--pages/pins/pins.wxml-->
<view class='main'>
  <view class='header'>
    <view>
      <image src="http://127.0.0.1:3000/img/headPortraits/headP-1.jpg" lazy-load mode='aspecFill'></image>
      <view>
        <view>❀故宫❀</view>
        <view>来自 阡陌凝烟</view>      
      </view>
    </view>
    <view>
      <button>关注</button>
      <button bindtap='showLikes'>...</button>    
    </view>
  </view>
  <view class='likes {{showLikes ? "":"uactive"}}'>
    <button>XXX喜欢</button>
    <button>分享</button>
  </view>
  <view class='banner' bindtap="changeSelected">
    <view class="{{selected==0?'active':''}}" data-sel='0'>XXX采集</view>
    <view class="{{selected==1?'active':''}}" data-sel='1'>被XXX人关注</view>
  </view>
  <view class='content'>
    <view class="{{selected==0?'active':''}}">
      <view class='list'>
        <view class="card" wx:for="{{testList}}" wx:key="index">
          <image></image>
          <view>image-title</view>
          <view>点赞</view>
          <view>
            <image lazy-load mode="aspectFill"></image>
            <view>author</view>
            <view>class-title</view>
          </view>
        </view>
      </view>
    </view>
    <view class="{{selected==1?'active':''}}">关注页</view>
  </view>
</view>
