/* pages/updateMyPic/updateMyPic.wxss */
view.main{
  box-sizing: border-box;
  height:100vh;
  width:100vw;
  padding:10rpx;
}
view.main>image{
  width:100%;
  border:1rpx solid #c4c4c4;
  box-sizing:border-box;
}
view.main>textarea{
  box-sizing: border-box;
  border-top:1rpx solid #c4c4c4;
  border-left:1rpx solid #c4c4c4;
  border-right:1rpx solid #c4c4c4;
  background-color:#eee;
  width:100%;
}
view.main>text:nth-child(4){
  display: block;
  background-color:#eee;
  border-bottom:1rpx solid #c4c4c4;
  border-left:1rpx solid #c4c4c4;
  border-right:1rpx solid #c4c4c4;
  color:#bbb;
  font-size:26rpx;
  text-align:right;
}